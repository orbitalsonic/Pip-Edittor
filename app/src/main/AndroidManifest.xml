<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apna.pip.camera.photo.editor.collage.maker">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/splash_icon"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.apna.pip.camera.photo.editor.collage.maker.activities.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.apna.pip.camera.photo.editor.collage.maker.activities.PIPEditor"
            android:label="PIPEditor"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.apna.pip.camera.photo.editor.collage.maker.activities.PIPGallery"
            android:label="@string/title_activity_pipgallery"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.apna.pip.camera.photo.editor.collage.maker.activities.GalleryFullImage"
            android:label="@string/title_activity_pipgallery"
            android:parentActivityName="com.apna.pip.camera.photo.editor.collage.maker.activities.PIPGallery"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.apna.pip.camera.photo.editor.collage.maker.activities.PIPGallery" />
        </activity>
        <activity
            android:name=".activities.UserConsentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.apna.pip.camera.photo.editor.collage.maker.costumDialog.TextInputDialog"
            android:label="Text and Style"
            android:theme="@style/Theme.Transparent"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.apna.pip.camera.photo.editor.collage.maker.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="test_picker.com.gun0912.pickmaster.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.apna.pip.camera.photo.editor.collage.maker.activities.TwoImagePipEditorAcitivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".services.MyFirebaseMessagingService"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>